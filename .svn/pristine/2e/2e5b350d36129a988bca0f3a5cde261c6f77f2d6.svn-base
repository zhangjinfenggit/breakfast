$(function(){
	var orderNo = GetQueryString("orderNo");
	$.ajax({
		type:"post",
		headers:setHeader,
		url:"http://"+ip+"/breakfastApi/weixin/queryOrderDetail",
		async:true,
		data:JSON.stringify({"orderNo":"201710112103"}),
		dataType:"json",
		success:function(result){
			if(result.retCode == "000000"){
				var list = result.data;
				var str1 = "";	//套餐字符串
				var str2 = "";	//单品字符串
				//遍历套餐
				for(var i=0;i<list.length;i++){
					if(list[i].singleProducts != null && list[i].singleProducts.length > 0){
						//遍历拼接套餐里的商品
						var _str = "";
						var _list = list[i].singleProducts;
						for(var n=0;n<_list.length;n++){
							_str +="<li>"+_list[n].singleName+"X"+_list[n].singleAmount+"</li>"
						}
						str1 += "<li><p><span>"+list[i].packageName+
								"</span><span>x"+list[i].packageAmount+"</span><span>¥<u class='price'>"+
								list[i].packMoney+"</u></span></p><ul>"+_str+"</ul></li>";
					}else{
						str2 += "<li><p><span>"+list[i].singleName+
								"</span><span>x"+list[i].singleAmount+"</span><span>¥<u class='price'>"+
								list[i].singleMoney+"</u></span></p><ul>"+"</ul></li>";;
					}
				}
				$("#orderDetail").html(str1+str2);
			}else{
				alert(result.retMsg);
			}
		}
	});
});